<!DOCTYPE html>
<html>
<head>
<%- include('header.ejs') %>
</head>
<body>
  <h1><%= title %></h1>
  <%- include('layout.ejs') %>
  <% if (genre_books.length > 0) { %>
    <p><strong>Delete the following books before attempting to delete this genre:</strong></p>
    <div style="margin-left:20px;margin-top:20px">
      <h2 style="font-size: 1.5rem;">Books</h2>
      <dl>
        <% genre_books.forEach(function(book) { %>
          <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
          <dd><%= book.summary %></dd>
        <% }); %>
      </dl>
    </div>
  <% } else { %>
    <p>Do you really want to delete this Genre?</p>
    <form method="POST">
      <div class="form-group">
        <input id="genreid" class="form-control" type="hidden" name="genreid" value="<%= genre._id %>">
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
    </form>
  <% } %>

  <% if (errors) { %>
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
