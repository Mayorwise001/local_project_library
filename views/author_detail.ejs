<!DOCTYPE html>
<html lang="en">
<head>
<%- include('header.ejs') %>
</head>
<body>
    <%- include('layout.ejs') %>
    <div class="col-sm-10">
    <h1><%= title %></h1>
    <h1>Author: <%= author.name %></h1>
<p><%= author.lifespan %> - <%= author.lifespan2 %></p>

<div style="margin-left:20px;margin-top:20px">
  <h2 style="font-size: 1.5rem;">Books</h2>
  <% if (author_books.length) { %>
    <dl>
      <% author_books.forEach(function(book) { %>
        <dt>
          <a href="<%= book.url %>"><%= book.title %></a>
        </dt>
        <dd><%= book.summary %></dd>
      <% }) %>
    </dl>
  <% } else { %>
    <p>This author has no books.</p>

    <hr>
    <p>
      <a href="<%= author.url + '/delete' %>">Delete author</a>
    </p>
  <% } %>
</div>
</div>
</body>
</html>