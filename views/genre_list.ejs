<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('header.ejs') %>
</head>
<body>
    <%- include('layout.ejs') %>
    
        <div class="col-sm-10">
            <h1><%= title %></h1>
            <% if (genre_list.length) { %>
              <ul>
                <% genre_list.forEach(function(genre) { %>
                  <li>
                    <a href="<%= genre.url %>"><%= genre.name %></a>
                    <form method="POST" action="<%= genre.url %>/delete" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </li>
                <% }); %>
              </ul>
            <% } else { %>
              <p>There are no books.</p>
            <% } %>

        </div>
    
</body>
</html>